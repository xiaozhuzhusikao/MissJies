<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">




    <!--展示的内容,用来动态替换展示不同的Fragment-->
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55.5dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="#b8c9d6"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/essence"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/essence_iv"
                style="@style/home_img_icon"

                />

            <TextView
                android:id="@+id/essence_tv"
                style="@style/home_text_icon"
                android:text="@string/home_text_icon1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/latest"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/latest_iv"
                style="@style/home_img_icon"
                />

            <TextView
                android:id="@+id/latest_tv"
                style="@style/home_text_icon"
                android:text="新帖"

                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_click"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_img"
                style="@style/home_img_center_icon"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/special"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/special_iv"
                style="@style/home_img_icon"
                />

            <TextView
                android:id="@+id/special_tv"
                style="@style/home_text_icon"
                android:text="败姐"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_iv"
                style="@style/home_img_icon"
                />

            <TextView
                android:id="@+id/my_tv"
                style="@style/home_text_icon"
                android:text="我的"
                />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
